<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dlc="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.customimageviewdemo.MainActivity">

    <com.example.customimageviewdemo.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        dlc:image="@mipmap/ic_launcher"
        dlc:imageScaleType="center"
        dlc:titleText="hello android!"
        dlc:titleTextColor="#ff0000"
        dlc:titleTextSize="30sp" />

    <com.example.customimageviewdemo.CustomImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        dlc:image="@mipmap/ic_launcher"
        dlc:imageScaleType="center"
        dlc:titleText="helloworldwelcome"
        dlc:titleTextColor="#00ff00"
        dlc:titleTextSize="20sp"/>

    <com.example.customimageviewdemo.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        dlc:image="@drawable/dlc"
        dlc:imageScaleType="center"
        dlc:titleText="meizi~"
        dlc:titleTextColor="#ff0000"
        dlc:titleTextSize="12sp"/>

</LinearLayout>
